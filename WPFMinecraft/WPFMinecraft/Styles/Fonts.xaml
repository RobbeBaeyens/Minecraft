<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WPFMinecraft">

    <FontFamily x:Key="Minecraft">pack://application;,,,/Fonts/#Minecraft</FontFamily>
    <FontFamily x:Key="Minecrafter">pack://application;,,,/Fonts/#Minecrafter</FontFamily>
    <FontFamily x:Key="MinecrafterAlt">pack://application;,,,/Fonts/#Minecrafter Alt</FontFamily>
    <FontFamily x:Key="Minecraftia">pack://application;,,,/Fonts/#Minecraftia</FontFamily>

    <Style TargetType="{x:Type Control}" x:Key="BaseStyle">
        <Setter Property="FontFamily" Value="{StaticResource Minecraft}" />
    </Style>

    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource BaseStyle}" />
    <Style TargetType="{x:Type Label}" BasedOn="{StaticResource BaseStyle}" />
    <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource BaseStyle}" />
    <Style TargetType="{x:Type ListView}" BasedOn="{StaticResource BaseStyle}" />

</ResourceDictionary>
