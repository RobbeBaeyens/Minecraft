<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WPFMinecraft">

    <Style TargetType="{x:Type Label}" x:Key="HeaderText" BasedOn="{StaticResource BaseStyle}">
        <Setter Property="Foreground" Value="{StaticResource ForegroundMainBrush}" />
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0, 6"/>
        <Setter Property="FontSize" Value="30"/>
    </Style>

    <Style TargetType="{x:Type Label}" x:Key="MinecraftText" BasedOn="{StaticResource BaseStyle}">
        <Setter Property="Foreground" Value="{StaticResource ForegroundLightBrush}" />
        <Setter Property="FontFamily" Value="{StaticResource Minecraftia}"/>
        <Setter Property="Margin" Value="0 0 0 -8"/>
        <Setter Property="Padding" Value="0"/>
    </Style>

</ResourceDictionary>
